<h1>Listing product</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
    <th></th>
  </tr>
 
<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><% if product.category %>
    <%= product.category.category %>
    <% else %>
    NO CATEGORY
    <% end %>
    </td>
    <td><%= link_to 'Show', product_path(product) %></td>
  </tr>
<% end %>
</table>
